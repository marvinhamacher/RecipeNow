@page "/recipes/{Id:int}"
@using RecipeNow.Data.Entities.RecipeSystem
@using RecipeNow.Services
@inject IRecipeService RecipeService
@inject UserService UserService
@inject NavigationManager NavigationManager
@inject IFileProviderService FileProviderService
@inject IJSRuntime JS
@rendermode InteractiveServer

<div class="container my-4">
    @if (_recipe is null)
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <p class="mb-0">Lade Rezept…</p>
            </div>
        </div>
    }
    else
    {
        <script></script>
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex flex-wrap align-items-start justify-content-between gap-3">
                    <div>
                        <h2 class="mb-1">@_recipe.Name</h2>
                        <div class="text-muted">
                            Erstellt von: <span class="fw-semibold">@(_userName ?? "Unbekannt")</span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 align-items-center">
                        @if (_isSameUser)
                        {
                            <a href="/recipes/edit-recipe/@_recipe.Id" class="btn btn-outline-primary">
                                Bearbeiten
                            </a>

                            <button type="button"
                                    class="btn btn-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal">
                                Löschen
                            </button>
                        }

                        <!-- EXPORT DROPDOWN -->
                        <div class="dropdown">
                            <button class="btn btn-success dropdown-toggle"
                                    type="button"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                Export
                            </button>

                            <ul class="dropdown-menu">
                                <li>
                                    <button class="dropdown-item" @onclick="DownloadTxt">TXT Export
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item" @onclick="DownloadPdf">PDF Export
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(_deleteError))
                {
                    <div class="alert alert-danger mt-3 mb-0">@_deleteError</div>
                }

                <hr />

                <div class="row g-4">
                    <div class="col-12 col-lg-7">
                        @if (_imagePaths.Count > 0)
                        {
                            <div id="recipeCarousel" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    @for (var i = 0; i < _imagePaths.Count; i++)
                                    {
                                        <button type="button"
                                                data-bs-target="#recipeCarousel"
                                                data-bs-slide-to="@i"
                                                class="@(i == 0 ? "active" : null)"
                                                aria-current="@(i == 0 ? "true" : null)"
                                                aria-label="Slide @(i + 1)">
                                        </button>
                                    }
                                </div>

                                <div class="carousel-inner rounded">
                                    @for (var i = 0; i < _imagePaths.Count; i++)
                                    {
                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                            <div class="ratio ratio-16x9 bg-light">
                                                <img class="w-100 h-100"
                                                     style="object-fit: cover;"
                                                     src="@_imagePaths[i]"
                                                     alt="Rezeptbild @(i + 1)">
                                            </div>
                                        </div>
                                    }
                                </div>

                                <button class="carousel-control-prev" type="button" data-bs-target="#recipeCarousel" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>

                                <button class="carousel-control-next" type="button" data-bs-target="#recipeCarousel" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-secondary mb-0">
                                Keine Bilder vorhanden.
                            </div>
                        }

                        <div class="mt-4">
                            <h5 class="mb-2">Beschreibung</h5>
                            @if (!string.IsNullOrWhiteSpace(_recipe.Description))
                            {
                                <p class="mb-0" style="white-space: pre-wrap;">@_recipe.Description</p>
                            }
                            else
                            {
                                <p class="text-muted mb-0">Keine Beschreibung angegeben.</p>
                            }
                        </div>
                        
                        <div class="mt-4">
                            <h5 class="mb-2">Anleitung</h5>
                            <p class="mb-0" style="white-space: pre-wrap;">@_recipe.CookingInstructions</p>
                        </div>
                    </div>

                    <div class="col-12 col-lg-5">
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <h5 class="card-title mb-3">Infos</h5>

                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Vorbereitung</span>
                                    <span class="fw-semibold">@_recipe.PreparationTime Min.</span>
                                </div>

                                <div class="d-flex justify-content-between mt-2">
                                    <span class="text-muted">Kochen</span>
                                    <span class="fw-semibold">@_recipe.CookingTime Min.</span>
                                </div>
                                <div class="d-flex justify-content-between mt-2">
                                    <span class="text-muted">Schwierigkeit</span>
                                    <span class="fw-semibold">@_recipe.CookingDifficulty</span>
                                </div>
                                <hr />
                                <h5 class="card-title mb-3">Zutaten</h5>
                                <ul class="list-group list-group-flush">
                                    @foreach (var ri in _recipe.RecipeIngredients)
                                    {
                                        <li class="list-group-item bg-light d-flex justify-content-between align-items-center px-0">
                                            <span class="me-2">
                                                @(ri.Ingredient?.Name ?? $"Zutat #{ri.IngredientId}")
                                            </span>
                                            <span class="badge text-bg-primary rounded-pill">
                                                @ri.Amount
                                            </span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Löschen</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Wollen sie die Rezept löschen?</p>
                    </div>
                    <div class="modal-footer">
                        <form action="/recipes/delete/@Id" method="post" style="display:inline">
                            <AntiforgeryToken/>
                            <button type="submit" class="btn btn-danger">
                                Löschen
                            </button>
                        </form>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>    
    }
</div>

@code {
    [Parameter] public int Id { get; set; }

    private Recipe? _recipe;
    private readonly List<string> _imagePaths = new();

    private string? _userName;
    private bool _isSameUser;

    private bool _isDeleting;
    private string? _deleteError;

    protected override async Task OnInitializedAsync()
    {
        _recipe = await RecipeService.GetByIdAsync(Id);
        if (_recipe is null)
            return;

        _imagePaths.Clear();

        if (_recipe.Images is not null)
        {
            foreach (var img in _recipe.Images)
            {
                if (!string.IsNullOrWhiteSpace(img.ImagePath))
                    _imagePaths.Add(img.ImagePath);
            }
        }

        // optional: Username anzeigen (falls Service existiert)
        var user = await UserService.GetUserByIdAsync(_recipe.UserId);
        _userName = user?.UserName;

        var currentUser = await UserService.GetUserAsync();
        var currentUserId = currentUser.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        _isSameUser = !string.IsNullOrWhiteSpace(currentUserId)
                      && string.Equals(_recipe.UserId, currentUserId, StringComparison.Ordinal);
    }

    private async Task DownloadTxt()
    {
        if (_recipe is null) return;

        var bytes = await FileProviderService.CreateRecipeTxtBlob(_recipe.Id);
        var base64 = Convert.ToBase64String(bytes);

        await JS.InvokeVoidAsync(
            "downloadFile",
            $"rezept_{_recipe.Id}.txt",
            "text/plain",
            base64);
    }

    private async Task DownloadPdf()
    {
        if (_recipe is null) return;

        var stream = await FileProviderService.CreateRecipePdfStream(_recipe.Id);

        using var streamRef = new DotNetStreamReference(stream);

        await JS.InvokeVoidAsync(
            "downloadFileFromStream",
            $"rezept_{_recipe.Id}.pdf",
            streamRef);
    }
}
