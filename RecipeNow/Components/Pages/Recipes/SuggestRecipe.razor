@page "/suggestRecipe"
@using System.Security.Claims
@using RecipeNow.Data.Entities.RecipeSystem
@using RecipeNow.Data.Enumerators
@using RecipeNow.Services
@inject IRecipeService RecipeService
@inject IUserService UserService
<div class="container my-4">
    @if (_recipes.Any())
    {
        @foreach (var recipe in _recipes)
        {
            var carouselId = $"recipeCarousel_{recipe.Id}";
        
            var images = _imagePaths.ContainsKey(recipe.Id)
                ? _imagePaths[recipe.Id]
                : new List<string>();

            var userName = _userNames.ContainsKey(recipe.Id)
                ? _userNames[recipe.Id]
                : "Unbekannt";

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex flex-wrap align-items-start justify-content-between gap-3">
                        <div>
                            <h2 class="mb-1">@recipe.Name</h2>
                            <div class="text-muted">
                                Erstellt von: 
                                <span class="fw-semibold">
                                    @(userName ?? "Unbekannt") 
                                </span>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="row g-4">
                        <div class="col-12 col-lg-7">

                            @{
                                var imagePaths = recipe.Images?.Select(i => i.ImagePath).ToList() ?? new List<string>();
                            }

                            @if (images.Count > 0)
                            {
                                <div id="@carouselId" class="carousel slide" data-bs-ride="carousel">

                                    <div class="carousel-indicators">
                                        @for (var i = 0; i < images.Count; i++)
                                        {
                                            <button type="button"
                                                    data-bs-target="#@carouselId"
                                                    data-bs-slide-to="@i"
                                                    class="@(i == 0 ? "active" : null)"
                                                    aria-current="@(i == 0 ? "true" : null)"
                                                    aria-label="Slide @(i + 1)">
                                            </button>
                                        }
                                    </div>

                                    <div class="carousel-inner rounded">
                                        @for (var i = 0; i < images.Count; i++)
                                        {
                                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                                <div class="ratio ratio-16x9 bg-light">
                                                    <img src="@images[i]"
                                                         class="w-100 h-100"
                                                         style="object-fit: cover;"
                                                         alt="Rezeptbild @(i + 1)" />
                                                </div>
                                            </div>
                                        }
                                    </div>

                                    <button class="carousel-control-prev"
                                            type="button"
                                            data-bs-target="#@carouselId"
                                            data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon"></span>
                                    </button>

                                    <button class="carousel-control-next"
                                            type="button"
                                            data-bs-target="#@carouselId"
                                            data-bs-slide="next">
                                        <span class="carousel-control-next-icon"></span>
                                    </button>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-secondary mb-0">
                                    Keine Bilder vorhanden.
                                </div>
                            }

                            <div class="mt-4">
                                <h5 class="mb-2">Beschreibung</h5>
                                @if (!string.IsNullOrWhiteSpace(recipe.Description))
                                {
                                    <p style="white-space: pre-wrap;">
                                        @recipe.Description
                                    </p>
                                }
                                else
                                {
                                    <p class="text-muted">
                                        Keine Beschreibung angegeben.
                                    </p>
                                }
                            </div>

                            <div class="mt-4">
                                <h5 class="mb-2">Anleitung</h5>
                                <p style="white-space: pre-wrap;">
                                    @recipe.CookingInstructions
                                </p>
                            </div>
                        </div>

                        <div class="col-12 col-lg-5">
                            <div class="card border-0 bg-light">
                                <div class="card-body">

                                    <h5 class="card-title mb-3">Infos</h5>

                                    <div class="d-flex justify-content-between">
                                        <span class="text-muted">Vorbereitung</span>
                                        <span class="fw-semibold">
                                            @recipe.PreparationTime Min.
                                        </span>
                                    </div>

                                    <div class="d-flex justify-content-between mt-2">
                                        <span class="text-muted">Kochen</span>
                                        <span class="fw-semibold">
                                            @recipe.CookingTime Min.
                                        </span>
                                    </div>

                                    <div class="d-flex justify-content-between mt-2">
                                        <span class="text-muted">Schwierigkeit</span>
                                        <span class="fw-semibold">
                                            @recipe.CookingDifficulty
                                        </span>
                                    </div>

                                    <hr />

                                    <h5 class="card-title mb-3">Zutaten</h5>

                                    <ul class="list-group list-group-flush">
                                        @foreach (var ri in recipe.RecipeIngredients)
                                        {
                                            <li class="list-group-item bg-light d-flex justify-content-between align-items-center px-0">
                                                <span>
                                                    @(ri.Ingredient?.Name ?? $"Zutat #{ri.IngredientId}")
                                                </span>
                                                <span class="badge text-bg-primary rounded-pill">
                                                    @ri.Amount.ToString("0.##") @EnumHelper.GetDisplayName(ri.Ingredient!.Measurement)
                                                </span>
                                            </li>
                                        }
                                    </ul>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            Keine passenden Rezepte gefunden.
        </div>
    }
</div>
@code {
    
    private List<Recipe> _recipes = new();
    private Dictionary<int, List<string>> _imagePaths = new();
    private Dictionary<int, string?> _userNames = new();

    protected override async Task OnInitializedAsync()
    {
        var currentUser = await UserService.GetUserAsync();
        var currentUserId = currentUser
            .FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)
            ?.Value;

        if (string.IsNullOrWhiteSpace(currentUserId))
            return;

        _recipes = await RecipeService.SuggestRecipesAsync(currentUserId);

        foreach (var recipe in _recipes)
        {
            var paths = new List<string>();

            if (recipe.Images is not null && recipe.Images.Any())
            {
                foreach (var img in recipe.Images)
                {
                    if (!string.IsNullOrWhiteSpace(img.ImagePath))
                        paths.Add(img.ImagePath);
                }
            }
            else if (!string.IsNullOrWhiteSpace(recipe.ImagePath))
            {
                paths.Add(recipe.ImagePath);
            }

            _imagePaths[recipe.Id] = paths;
            
            var user = await UserService.GetUserByIdAsync(recipe.UserId);
            _userNames[recipe.Id] = user?.UserName;
        }
    }


}