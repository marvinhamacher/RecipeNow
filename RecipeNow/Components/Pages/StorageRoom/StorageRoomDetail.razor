@page "/StorageRoom/{Id:int}"
@using System.ComponentModel.DataAnnotations
@using System.Security.Claims
@using Microsoft.EntityFrameworkCore
@using RecipeNow.Data.Entities.RecipeSystem
@using RecipeNow.Data.Enumerators
@using RecipeNow.Services

@inject StorageRoomService StorageRoomService
@inject UserService UserService
@inject NavigationManager NavigationManager
@inject IIngredientService IngredientService
@inject IJSRuntime JS

@rendermode InteractiveServer


@if (_sameUser && _storageRoom != null)
{
    <h3 class="mb-4">Vorratsraum: @_storageRoom.Name</h3>

    <div class="btn-group mb-4">
        <button class="btn btn-primary" @onclick="NewShelfClicked">
            + Neuer Schrank
        </button>
    </div>

    <!-- üî• GRID F√úR ALLE SCHR√ÑNKE -->
    <div class="room-grid">

        @foreach (var shelf in _shelves)
        {
            <div class="card shelf-card shadow-sm">

                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@shelf.ContentDescription</h5>

                    <div class="dropdown">
                        <button class="btn btn-sm btn-light" data-bs-toggle="dropdown">
                            ‚ãÆ
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                            <li>
                                <button class="dropdown-item"
                                        @onclick="() => StartEdit(shelf)">
                                    Bearbeiten
                                </button>
                            </li>
                            <li>
                                <button class="dropdown-item"
                                        @onclick="() => StartDelete(shelf.Id)">
                                    L√∂schen
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="card-body">
                    <div class="shelf-slots"
                         style="grid-template-columns: repeat(@shelf.Width, 1fr);">

                        @for (int row = 1; row <= shelf.Height; row++)
                        {
                            @for (int col = 1; col <= shelf.Width; col++)
                            {
                                var r = row;
                                var c = col;
                                var si = shelf.ShelfIngredients
                                    .FirstOrDefault(x => x.Row == r && x.Column == c);

                                <div class="slot @(si == null ? "empty" : $"filled {GetExpiryClass(si)}")"
                                     draggable="@(si != null)"
                                     @ondragstart="@(si != null ? () => StartDrag(si.Id) : null)"
                                     @ondragover:preventDefault
                                     @ondrop="() => HandleDrop(shelf.Id, r, c)"
                                     @onclick="@(si == null ? () => OpenAddIngredientModal(shelf.Id, c, r) : null)"
                                     @oncontextmenu="@(si != null 
                                                         ? () => ChangeItem(si.Id, si.Amount, EnumHelper.GetDisplayName(si.Ingredient!.Measurement)) 
                                                         : null)"
                                     @oncontextmenu:preventDefault>

                                    @if (si == null)
                                    {
                                        <span class="plus">+</span>
                                    }
                                    else
                                    {
                                        <img src="@si.Ingredient?.ImagePath" />
                                        <span class="amount">@si.Amount.ToString("0.##") @EnumHelper.GetDisplayName(si.Ingredient!.Measurement)</span>
                                    }

                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        }

    </div>
}
else
{
    <h3>
        Vorratsraum konnte nicht geladen werden oder du hast keinen Zugriff.
    </h3>
}

<!-- Create / Edit Shelf Modal -->
<div class="modal fade" id="addShelfModal" @ref="_modalEl">
    <div class="modal-dialog">
        <div class="modal-content shadow">
            <EditForm EditContext="_editContext" OnValidSubmit="SaveShelf">
                <DataAnnotationsValidator />

                <div class="modal-header">
                    <h5 class="modal-title">@(_isEdit ? "Schrank bearbeiten" : "Neuen Schrank anlegen")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <label class="form-label">Inhaltsbeschriftung</label>
                    <InputText class="form-control" @bind-Value="_newShelfModel.ContentDescription" />
                    <ValidationMessage For="@(() => _newShelfModel.ContentDescription)" />
                    @if(_isEdit)
                    {
                        <div class="form-text">
                            Aktuelle Kapazit√§t: @(_newShelfModel.Height * _newShelfModel.Width) F√§cher
                        </div>
                    }
                    else
                    {
                        <label class="form-label mt-2">Breite</label>
                        <InputNumber class="form-control" @bind-Value="_newShelfModel.Width" />
                        <ValidationMessage For="@(() => _newShelfModel.Width)" />

                        <label class="form-label mt-2">H√∂he</label>
                        <InputNumber class="form-control" @bind-Value="_newShelfModel.Height" />
                        <ValidationMessage For="@(() => _newShelfModel.Height)" />
                    }
                    @if (!string.IsNullOrWhiteSpace(_error))
                    {
                        <div class="text-danger mt-2">@_error</div>
                    }
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="submit" class="btn btn-primary">Speichern</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

<!-- Add Ingredient Modal -->
<div class="modal fade" @ref="_addShelfIngredientEl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Zutat platzieren</h5>
                <button class="btn-close" @onclick="CloseAddModal"></button>
            </div>

            <div class="modal-body">
                <EditForm Model="_newShelfIngredientModel" OnValidSubmit="SaveShelfIngredient">
                    <DataAnnotationsValidator />

                    <div class="mb-3">
                        <label>Zutat</label>
                        <InputSelect class="form-select" @bind-Value="_newShelfIngredientModel.IngredientId">
                            <option value="">-- w√§hlen --</option>
                            @foreach (var i in _ingredients)
                            {
                                <option value="@i.Id">@i.Name</option>
                            }
                        </InputSelect>
                    </div>

                    <div class="mb-3">
                        <label>Menge</label>
                        <InputNumber class="form-control" @bind-Value="_newShelfIngredientModel.Amount" />
                    </div>

                    <div class="mb-3">
                        <label>Ablaufdatum</label>
                        <InputDate class="form-control" @bind-Value="_newShelfIngredientModel.ExpirationDate" />
                    </div>

                    <button class="btn btn-primary">Speichern</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" @ref="_deleteModalEl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">L√∂schen</h5>
                <button class="btn-close" @onclick="CloseDeleteModal"></button>
            </div>
            <div class="modal-body">
                <p>Wollen sie den Schrank l√∂schen?</p>
            </div>
            <div class="modal-footer">
                <form action="/StorageRoom/@_deleteModel.Id/delete/@_deleteModel.ShelfId" method="post" style="display:inline">
                    <AntiforgeryToken/>
                    <button type="submit" class="btn btn-danger">
                        L√∂schen
                    </button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" @ref="_changeValueModalEL">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg modern-modal">

            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-semibold">
                    Menge anpassen
                </h5>
                <button type="button"
                        class="btn-close"
                        @onclick="CloseChangeModal">
                </button>
            </div>

            <div class="modal-body pt-2">

                <EditForm Model="_changeValueModel"
                          OnValidSubmit="UpdateShelfIngredient">

                    <DataAnnotationsValidator />

                    <!-- Anzeige -->
                    <div class="text-center mb-4">

                        <div class="amount-display">
                            @_changeValueModel.Amount
                            <span class="unit">@_changeValueModel.MeasurementType</span>
                        </div>

                    </div>

                    <!-- Slider -->
                    <input type="range"
                           class="form-range modern-slider"
                           min="0"
                           max="2000"
                           step="1.0"
                           @bind="_sliderValue"
                           @bind:event="oninput"
                           @onchange="UpdateAmountFromSlider" />

                    <!-- Manual Toggle -->
                    <div class="text-center mt-3">
                        <button type="button"
                                class="btn btn-sm btn-outline-secondary"
                                @onclick="ToggleManualInput">
                            @(_showManualInput ? "Manuelle Eingabe schlie√üen"
                                              : "Manuelle Eingabe")
                        </button>
                    </div>

                    <!-- Animiertes Input Feld -->
                    <div class="manual-input-container @( _showManualInput ? "open" : "" )">
                        <InputNumber class="form-control mt-3"
                                     step="0.1"
                                     @bind-Value="_changeValueModel.Amount" />
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between mt-5">

                        <button type="button"
                                class="btn btn-outline-danger"
                                @onclick="ConfirmDelete">
                            L√∂schen
                        </button>

                        <div class="d-flex gap-2">
                            <button type="button"
                                    class="btn btn-secondary"
                                    @onclick="CloseChangeModal">
                                Abbrechen
                            </button>

                            <button type="submit"
                                    class="btn btn-primary px-4">
                                Speichern
                            </button>
                        </div>

                    </div>

                </EditForm>

            </div>
        </div>
    </div>
</div>
<script>
    window.bootstrapModalShow = (el) => { if (el) new bootstrap.Modal(el).show(); }
    window.bootstrapModalHide = (el) => { const m = bootstrap.Modal.getInstance(el); if (m) m.hide(); }
</script>

@code {

    [Parameter] public int Id { get; set; }

    private StorageRoom? _storageRoom;
    private List<Shelf> _shelves = new();
    private List<Ingredient> _ingredients = new();
    private bool _confirmDelete;
    private bool _sameUser;
    private int? _draggedShelfIngredientId;
    private bool _showManualInput;
    private int _modalShelfId;
    private int _modalRow;
    private int _modalCol;
    private int _editingShelfId;
    private double _sliderValue = 0;

    private ElementReference _modalEl;
    private ElementReference _addShelfIngredientEl;
    private ElementReference _deleteModalEl;
    private ElementReference _changeValueModalEL;

    private NewShelfModel _newShelfModel = new();
    private ChangeValueModel _changeValueModel = new();
    private DeleteModel _deleteModel = new();
    private EditContext _editContext = default!;
    private bool _isEdit;
    private string? _error;

    private NewShelfIngredientModel _newShelfIngredientModel = new();

    public sealed class ChangeValueModel
    {
        public int Id { get; set; } 
        [Required(ErrorMessage = "Breite ist erforderlich"), Range(0,2000, ErrorMessage =  "Der Slider geht ja nur bis 2000")]
        public decimal Amount { get; set; }
        public string MeasurementType { get; set; } = string.Empty;
    }
    public class NewShelfModel
    {
        [Required(ErrorMessage = "Inhaltsbeschriftung ist erforderlich")]
        public string ContentDescription { get; set; } = string.Empty;

        [Required(ErrorMessage = "Breite ist erforderlich"), Range(1,20, ErrorMessage =  "Breite darf nicht gr√∂√üer als 20 und nicht kleiner als 1 sein")]
        public int Width { get; set; }

        [Required(ErrorMessage = "H√∂he ist erforderlich"),Range(1,20, ErrorMessage =  "H√∂he darf nicht gr√∂√üer als 20 und nicht kleiner als 1 sein")]
        public int Height { get; set; }
    }

    public class NewShelfIngredientModel
    {
        public int IngredientId { get; set; }
        [Required(ErrorMessage = "Menge ist erforderlich"),Range(1,2000, ErrorMessage =  "Menge darf nicht gr√∂√üer als 2000 und nicht kleiner als 1 sein")]
        public int Amount { get; set; }
        public DateTime ExpirationDate { get; set; } = DateTime.Today.AddDays(7);
    }
    
    public class DeleteModel
    {
        public int Id { get; set; }
        public int ShelfId { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        var room = await StorageRoomService.GetStorageRoomByIdAsync(Id);
        if (room == null)
        {
            NavigationManager.NavigateTo("/storagerooms", true);
            return;
        }

        _storageRoom = room;

        var currentUser = await UserService.GetUserAsync();
        var currentUserId = currentUser.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        _sameUser = !string.IsNullOrWhiteSpace(currentUserId)
                    && string.Equals(room.UserId, currentUserId, StringComparison.Ordinal);

        _ingredients = (await IngredientService.LoadAllAsync()).ToList();

        await LoadShelves();
        ResetForm();
    }
    private void ToggleManualInput()
    {
        _showManualInput = !_showManualInput;
    }
    private void ResetForm()
    {
        _newShelfModel = new NewShelfModel();
        _editContext = new EditContext(_newShelfModel);
        _error = null;
    }

    private async Task LoadShelves()
    {
        _shelves = await StorageRoomService.GetStorageRoomShelfAsync(Id);
    }

    private async Task NewShelfClicked()
    {
        _isEdit = false;
        ResetForm();
        await JS.InvokeVoidAsync("bootstrapModalShow", _modalEl);
    }

    private void StartDrag(int id) => _draggedShelfIngredientId = id;

    private async Task HandleDrop(int shelfId, int row, int col)
    {
        if (_draggedShelfIngredientId == null) return;

        await StorageRoomService.UpdateShelfIngredientPositionAsync(
            _draggedShelfIngredientId.Value,
            col,
            row,
            shelfId);

        _draggedShelfIngredientId = null;
        await LoadShelves();
    }

    private async Task OpenAddIngredientModal(int shelfId, int col, int row)
    {
        _modalShelfId = shelfId;
        _modalCol = col;
        _modalRow = row;
        _newShelfIngredientModel = new();
        await JS.InvokeVoidAsync("bootstrapModalShow", _addShelfIngredientEl);
    }

    private async Task CloseAddModal()
    {
        await JS.InvokeVoidAsync("bootstrapModalHide", _addShelfIngredientEl);
    }
    
    private async Task CloseDeleteModal()
    {
        await JS.InvokeVoidAsync("bootstrapModalHide", _deleteModalEl);
    }
    
    private async Task CloseChangeModal()
    {
        await JS.InvokeVoidAsync("bootstrapModalHide", _changeValueModalEL);
    }

    private async Task SaveShelfIngredient()
    {
        var entity = new ShelfIngredient
        {
            ShelfId = _modalShelfId,
            Column = _modalCol,
            Row = _modalRow,
            IngredientId = _newShelfIngredientModel.IngredientId,
            Amount = _newShelfIngredientModel.Amount,
            ExpirationDate = _newShelfIngredientModel.ExpirationDate
        };

        await StorageRoomService.AddIngredientToShelfAsync(entity);

        await CloseAddModal();
        await LoadShelves();
    }

    private string GetExpiryClass(ShelfIngredient si)
    {
        var days = (si.ExpirationDate - DateTime.Today).TotalDays;
        if (days < 0) return "exp-red";
        if (days <= 1) return "exp-orange";
        if (days <= 7) return "exp-yellow";
        return "exp-green";
    }
    
    private async Task ChangeItem(int shelfIngredientId, decimal amount, string unit)
    {
        _changeValueModel = new ChangeValueModel
        {
            Id = shelfIngredientId,
            Amount = amount,
            MeasurementType = unit,
        };

        _sliderValue = (double)amount;
        _showManualInput = false;

        await JS.InvokeVoidAsync("bootstrapModalShow", _changeValueModalEL);
    }
    

    private async Task StartEdit(Shelf shelf)
    {
        _isEdit = true;
        _editingShelfId = shelf.Id;
        _newShelfModel = new NewShelfModel
        {
            ContentDescription = shelf.ContentDescription,
            Width = shelf.Width,
            Height = shelf.Height
        };
        _editContext = new EditContext(_newShelfModel);
        await JS.InvokeVoidAsync("bootstrapModalShow", _modalEl);
    }
    
    private async Task StartDelete(int id)
    {
        _isEdit = true;
        _deleteModel = new DeleteModel 
        { 
            Id = Id,
            ShelfId = id 
        };
        await JS.InvokeVoidAsync("bootstrapModalShow", _deleteModalEl);
    }
    

    private async Task SaveShelf(EditContext context)
    {
        if (!context.Validate()) return;

        try
        {
            if (_isEdit)
            {
                await StorageRoomService.UpdateShelfContentDescriptionAsync(_newShelfModel.ContentDescription, _editingShelfId);
            }
            else
            {
                await StorageRoomService.AddShelfAsync(Id, _newShelfModel.ContentDescription, _newShelfModel.Height, _newShelfModel.Width);
            }

            await LoadShelves();
            await JS.InvokeVoidAsync("bootstrapModalHide", _modalEl);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }
    
    public async Task UpdateShelfIngredient()
    {
        switch (_changeValueModel.Amount)
        {
            case 0:
                await DeleteShelfIngredient(_changeValueModel.Id);
                return;
            case <0:
                return;
            default:
                await StorageRoomService.ChangeShelfIngredientAmountAsync(_changeValueModel.Id, _changeValueModel.Amount);
                break;
        }
        
        await CloseChangeModal();
        await LoadShelves();
    }

    public async Task DeleteShelfIngredient(int shelfIngredientId)
    {
        await StorageRoomService.DeleteShelfIngredientAsync(shelfIngredientId);
        await CloseChangeModal();
        await LoadShelves();
    }
    
    private async Task ConfirmDelete()
    {
        if (!_confirmDelete)
        {
            _confirmDelete = true;
            return;
        }

        await DeleteShelfIngredient(_changeValueModel.Id);
    }
    
    private void UpdateAmountFromSlider()
    {
        _changeValueModel.Amount = (decimal)_sliderValue;
    }
}


