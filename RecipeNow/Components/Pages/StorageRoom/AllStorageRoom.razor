@page "/StorageRoom"
@using System.ComponentModel.DataAnnotations
@using RecipeNow.Data.Entities.RecipeSystem
@using RecipeNow.Services
@inject StorageRoomService StorageRoomService
@inject UserService UserService

<h1>Vorratsräume:</h1>

<div class="card">
    <div class="card-body">
        <div class="btn-group mb-3">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#storageRoomModal" @onclick="PrepareNewRoom">
                Neuer Raum
            </button>
        </div>

        <div class="row">
            @foreach (var room in _rooms)
            {
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@room.Name</h5>
                            <p class="card-text">Anzahl Schränke: @(room.StorageRoomShelf?.Count ?? 0)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal für neuen Raum -->
<div class="modal fade" id="storageRoomModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <EditForm Model="_newRoomModel" OnValidSubmit="CreateRoom" FormName="StorageRoomForm">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="modal-header">
                    <h5 class="modal-title">Neuen Vorratsraum anlegen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
                </div>

                <div class="modal-body">
                    <label class="form-label">Name</label>
                    <InputText class="form-control" @bind-Value="_newRoomModel.Name" @bind-Value:event="oninput" />
                    <ValidationMessage For="@(() => _newRoomModel.Name)" class="text-danger" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="submit" class="btn btn-primary">Speichern</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {

    public sealed class NewRoomModel
    {
        [Required(ErrorMessage = "Name ist erforderlich")] 
        public string Name { get; set; } = string.Empty;
    }
    
    private List<StorageRoom> _rooms = new();
    private NewRoomModel _newRoomModel = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadRooms();
    }

    private async Task LoadRooms()
    {
        _rooms = await StorageRoomService.GetAllStorageRoomsByCurrentUserAsync();
    }

// Modal vorbereiten
    private void PrepareNewRoom()
    {
        _newRoomModel = new NewRoomModel();
    }

// OnValidSubmit
    private async Task CreateRoom()
    {
        await StorageRoomService.AddStorageRoomAsync(_newRoomModel.Name);

        await LoadRooms();

        PrepareNewRoom(); // Model zurücksetzen
        StateHasChanged();
    }

}
