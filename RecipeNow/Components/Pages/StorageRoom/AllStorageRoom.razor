@page "/StorageRoom"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@using RecipeNow.Data.Entities.RecipeSystem
@using RecipeNow.Services
@inject StorageRoomService StorageRoomService
@inject IJSRuntime JS

<h1>Vorratsräume:</h1>

<div class="card">
    <div class="card-body">
        <!-- Button öffnet das Bootstrap-Modal -->
        <button class="btn btn-primary mb-3"
                data-bs-toggle="modal"
                data-bs-target="#storageRoomModal"
                @onclick="PrepareNewRoom"
                type="button">
            Neuer Raum
        </button>

        <div class="row">
            @foreach (var room in _rooms)
            {
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@room.Name</h5>
                            <p class="card-text">Anzahl Schränke: @(room.StorageRoomShelf?.Count ?? 0)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="storageRoomModal" tabindex="-1" aria-hidden="true" @ref="_modalEl">
    <div class="modal-dialog">
        <div class="modal-content">
            <EditForm EditContext="_editContext"
                      OnValidSubmit="CreateRoom"
                      FormName="StorageRoomForm" >

                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="modal-header">
                    <h5 class="modal-title">@(_isEdit ? "Vorratsraum bearbeiten" : "Neuen Vorratsraum anlegen")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
                </div>

                <div class="modal-body">
                    <label class="form-label">Name</label>
                    <InputText class="form-control"
                               @bind-Value="_newRoomModel.Name" />
                    <ValidationMessage For="@(() => _newRoomModel.Name)" class="text-danger" />

                    @if (!string.IsNullOrWhiteSpace(_error))
                    {
                        <div class="text-danger mt-2">@_error</div>
                    }
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="submit" class="btn btn-primary">Speichern</button>
                </div>

            </EditForm>
        </div>
    </div>
</div>
<script src="/StorageRoom/JS/bootstrapModalHide.js"></script>
@code {
    private bool _interactive;
    private List<StorageRoom> _rooms = new();
    private NewRoomModel _newRoomModel = new();
    private EditContext _editContext = default!;
    
    private ElementReference _modalEl;
    
    private bool _isEdit;
    private string? _error;
    
    private void ResetForm()
    {
        _newRoomModel = new NewRoomModel();
        _editContext = new EditContext(_newRoomModel);
    }
    
    public class NewRoomModel
    {
        [Required(ErrorMessage = "Name ist erforderlich")]
        public string Name { get; set; } = string.Empty;
    }
    
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender) { _interactive = true; StateHasChanged(); }
    }
    
    protected override void OnInitialized()
    {
        ResetForm();
    }
    
    protected override async Task OnInitializedAsync()
    {
        ResetForm();
        await LoadRooms();
    }

    private async Task LoadRooms()
    {
        _rooms = await StorageRoomService.GetAllStorageRoomsByCurrentUserAsync();
    }

    private Task PrepareNewRoom()
    {
        Console.WriteLine("Preparing");
        ResetForm();
        return Task.CompletedTask;
    }

    private async Task CreateRoom(EditContext context)
    {
        if (!context.Validate())
        {
            Console.WriteLine("Validation failed: " + string.Join(", ", context.GetValidationMessages()));
            return;
        }

        Console.WriteLine("Validation passed: " + _newRoomModel.Name);

        // StorageRoom speichern
        await StorageRoomService.AddStorageRoomAsync(_newRoomModel.Name);

        // Räume neu laden
        await LoadRooms();
        
        await JS.InvokeVoidAsync("bootstrapModalHide", _modalEl);
        
    }
}
