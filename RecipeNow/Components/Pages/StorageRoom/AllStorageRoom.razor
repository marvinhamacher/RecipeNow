@page "/StorageRoom"
@using RecipeNow.Data.Entities.RecipeSystem
@using RecipeNow.Services
@inject UserService UserService
@inject NavigationManager NavigationManager
@inject StorageRoomService StorageRoomService
<h1>Vorratsräume:</h1>
<div class="card">
    <div class="card-body">
        <div class="btn-group" role="group" aria-label="Storage Room Buttons">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#storageRoom">Neuer
                Raum
            </button>
        </div>
        <div class="row">
            @foreach (var storageRoom in _rooms)
            {
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@storageRoom.Name</h5>
                            <p class="card-text">Menge an Schränke: @(storageRoom.StorageRoomShelf?.Count ?? 0)</p>
                            <div class="btn-group" role="group" aria-label="Storage Room Buttons">
                                <button type="button"
                                        class="btn btn-primary"
                                        @onclick='() => NavigationManager.NavigateTo($"/StorageRoom/{storageRoom.Id}")'>
                                    Zum Raum
                                </button>
                                <button type="button" class="btn btn-primary">Middle</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="modal fade" id="storageRoom" tabindex="-1" aria-labelledby="storageRoomLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <EditForm Model="_editModel"
                          OnValidSubmit="SaveRoomAsync"
                          FormName="CreateStorageRoom">
                    <DataAnnotationsValidator />

                    <div class="modal-header">
                        <h5 class="modal-title" id="storageRoomLabel">Neuen Vorratsraum anlegen</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label">Name</label>

                                <!-- oninput: Wert ist garantiert aktuell beim Submit -->
                                <InputText class="form-control"
                                           @bind-Value="_editModel.Name"
                                           @bind-Value:event="oninput" />

                                <ValidationMessage For="@(() => _editModel.Name)" class="text-danger" />
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private List<StorageRoom> _rooms = new();

    private StorageRoom _editModel = new()
    {
        UserId = "",
        Name = "",
        StorageRoomShelf = new List<Shelf>()
    };

    protected override async Task OnInitializedAsync()
    {
        var isAuthenticated = await UserService.IsAuthenticated();
        if (isAuthenticated)
            _rooms = await StorageRoomService.GetAllStorageRoomsByCurrentUserAsync();
    }

    protected async Task SaveRoomAsync()
    {
        await StorageRoomService.AddStorageRoomAsync(_editModel);

        _rooms = await StorageRoomService.GetAllStorageRoomsByCurrentUserAsync();

        _editModel = new StorageRoom { UserId = "", Name = "", StorageRoomShelf = new List<Shelf>() };

        StateHasChanged();
    }
}